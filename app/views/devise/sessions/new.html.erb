<form class="simple_form new_user" id="new_user" novalidate="novalidate" action="/u/sign_in" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div id="login-box">
    <div class="recetas-inicio">
          <label class="email optional" for="user_email">Email</label>
          <input autocomplete="email" class="string email optional" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email">
          <label class="password optional" for="user_password">Contraseña</label>
          <input autocomplete="current-password" class="password optional" type="password" name="user[password]" id="user_password">
        <div class="input boolean optional user_remember_me">
          <input value="0" type="hidden" name="user[remember_me]">
          <label class="boolean optional checkbox" for="user_remember_me">
            <input class="boolean optional" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">Recordarme</label>
          </div>
          <div class="form-actions">
            <input type="submit" name="commit" value="Log in" class="btn" data-disable-with="Log in">
          </div>
      </div>
      </div>

  </form>
